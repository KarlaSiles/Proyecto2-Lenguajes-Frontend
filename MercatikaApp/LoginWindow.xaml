<Window x:Class="MercatikaApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MercatikaApp.ViewModels"
        Title="Login"
        Height="350" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <!-- Declaramos el ViewModel como recurso de ventana -->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- (Tu estilo OrangeButton aquí…) -->
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LOGO -->
        <Image Source="Resources/LogoMK.png"
               Grid.Row="0" Grid.ColumnSpan="2"
               Height="80"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- Usuario -->
        <TextBlock Text="Usuario:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"
                   FontSize="14" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,10" Height="28"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Contraseña -->
        <TextBlock Text="Contraseña:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"
                   FontSize="14" FontWeight="Bold"/>
        <PasswordBox x:Name="pwdBox"
                     Grid.Row="2" Grid.Column="1"
                     Margin="0,0,0,10" Height="28"
                     PasswordChanged="PwdBox_PasswordChanged"/>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Ingresar"
                    Style="{StaticResource OrangeButton}"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding Path=IsBusy, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            <Button Content="Cancelar"
                    Style="{StaticResource OrangeButton}"
                    Command="{Binding CancelCommand}"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Error -->
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>