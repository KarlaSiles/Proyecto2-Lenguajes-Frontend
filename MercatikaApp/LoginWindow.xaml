<Window x:Class="MercatikaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="350"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Estilo para botones naranja -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE67C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD26900"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LOGO -->
        <Image Source="Resources/LogoMK.png"
               Grid.Row="0" Grid.ColumnSpan="2"
               Height="80"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- Usuario -->
        <TextBlock Text="Usuario:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"
                   FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,10" Height="28"/>

        <!-- Contraseña -->
        <TextBlock Text="Contraseña:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"
                   FontSize="14" FontWeight="Bold"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1"
                     Margin="0,0,0,10" Height="28"/>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Ingresar" Style="{StaticResource OrangeButton}"
                    Click="Enter_Click"/>
            <Button Content="Cancelar" Style="{StaticResource OrangeButton}"
                    Click="Cancel_Click"/>
        </StackPanel>

        <!-- Error -->
        <TextBlock x:Name="lblError"
                   Grid.Row="4" Grid.ColumnSpan="2"
                   Foreground="Red"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
