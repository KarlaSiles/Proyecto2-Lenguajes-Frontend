<Window x:Class="MercatikaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mercatika" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Estilo para los ítems principales del menú -->
        <Style x:Key="MainMenuItem" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#FF1F1F1F"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FFFFF3E0"/>
                    <Setter Property="Foreground" Value="#FFE67C00"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF0078D7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para los subítems del menú -->
        <Style x:Key="SubMenuItem" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#FF555555"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5,20,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FFF0F7FF"/>
                    <Setter Property="Foreground" Value="#FF0078D7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para los separadores -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Height" Value="1"/>
        </Style>

        <!-- Estilo para el botón -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE67C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#FFD26900"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD26900"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Encabezado superior -->
        <StackPanel DockPanel.Dock="Top" Background="White">
            <!-- Encabezado con logo y botón cerrar sesión -->
            <Grid Margin="10,5" Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Imagen del logo -->
                <Image Source="Resources/LogoMK.png" 
                       Height="60"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Grid.Column="0"
                       Margin="10,0"/>

                <!-- Botón cerrar sesión -->
                <Button x:Name="LogOutButton"
                        Content="Cerrar sesión"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Style="{StaticResource OrangeButton}"/>
            </Grid>

            <!-- Menú principal -->
            <Menu Background="White" Margin="10,0">
                <MenuItem Header="Pedidos" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="Nuevo pedido" Style="{StaticResource SubMenuItem}"/>
                    <MenuItem Header="Historial" Style="{StaticResource SubMenuItem}"/>
                    <MenuItem Header="Pendientes" Style="{StaticResource SubMenuItem}"/>
                    <Separator/>
                    <MenuItem Header="Estadísticas" Style="{StaticResource SubMenuItem}"/>
                </MenuItem>

                <MenuItem Header="Products" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="Add product" Style="{StaticResource SubMenuItem}"/>
                    <MenuItem Header="Add product Detail" Style="{StaticResource SubMenuItem}"/>
                </MenuItem>

                <MenuItem Header="Clients" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="Customer management" Style="{StaticResource SubMenuItem}" Click="CustomerManagement_Click"/>/>
                </MenuItem>

                <MenuItem Header="Reportes" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="Ventas" Style="{StaticResource SubMenuItem}"/>
                    <MenuItem Header="Financieros" Style="{StaticResource SubMenuItem}"/>
                    <MenuItem Header="Personalizados" Style="{StaticResource SubMenuItem}"/>
                    <Separator/>
                    <MenuItem Header="Exportar datos" Style="{StaticResource SubMenuItem}"/>
                </MenuItem>
            </Menu>

            <!-- Barra decorativa naranja -->
            <Border Height="4" Background="#FFE67C00" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Contenido principal -->
        <Grid Background="#FFF9F9F9">
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>


