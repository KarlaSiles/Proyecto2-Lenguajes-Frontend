<Window x:Class="MercatikaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mercatika" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Área superior: Título + botón Cerrar sesión + Menú -->
        <StackPanel DockPanel.Dock="Top">
            <!-- Fila con título y botón -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Texto centrado -->
                <TextBlock Text="Mercatika"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/>

                <!-- Botón Cerrar sesión -->
                <Button Content="Log Out"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Padding="5,2"
                        Click="LogOut_Click"/>
            </Grid>

            <!-- Menú horizontal -->
            <Menu>
                <MenuItem Header="Orders"/>
                <MenuItem Header="Products"/>
                <MenuItem Header="Clients"/>
                <MenuItem Header="Reports"/>
            </Menu>
        </StackPanel>

        <!-- Resto del contenido -->
        <Grid>
            <!-- Aquí va el contenido principal -->
        </Grid>
    </DockPanel>
</Window>
