<Window x:Class="MercatikaApp.Views.ProductInsertView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MercatikaApp.ViewModel"
        Title="Insertar Producto" Height="300" Width="450">

    <Window.DataContext>
        <vm:ProductViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Nombre del Producto"/>
            <TextBox Text="{Binding SelectedProduct.ProductName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Precio"/>
            <TextBox Text="{Binding SelectedProduct.Price, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Código de Categoría"/>
            <TextBox Text="{Binding SelectedProduct.CategoryCode.CategoryCode, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Descripción de Categoría"/>
            <TextBox Text="{Binding SelectedProduct.CategoryCode.Description, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Insertar"
                    Width="100"
                    Command="{Binding AddCommand}" />
        </StackPanel>
    </Grid>
</Window>


