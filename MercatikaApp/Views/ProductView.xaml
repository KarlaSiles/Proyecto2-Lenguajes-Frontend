<Window x:Class="MercatikaApp.Views.ProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MercatikaApp.ViewModel"
        mc:Ignorable="d"
        Title="Gestión de Productos" Height="600" Width="800">

    <Window.DataContext>
        <vm:ProductViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBox Width="300"
                     Margin="0 0 10 0"
                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Buscar"
                    Command="{Binding SearchCommand}"
                    Width="80"/>
        </StackPanel>

        
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Height="300"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding ProductId}"
                                    Width="50"/>
                <DataGridTextColumn Header="Nombre"
                                    Binding="{Binding ProductName}"
                                    Width="200"/>
                <DataGridTextColumn Header="Precio"
                                    Binding="{Binding Price}"
                                    Width="100"/>
                <DataGridTextColumn Header="Categoría"
                                    Binding="{Binding CategoryCode.Description}"
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        
        <StackPanel Grid.Row="2" Orientation="Vertical">

            
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Nombre:" Width="60" VerticalAlignment="Center"/>
                <TextBox Width="200"
                         Text="{Binding SelectedProduct.ProductName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5"/>

                <TextBlock Text="Precio:" Width="60" VerticalAlignment="Center"/>
                <TextBox Width="100"
                         Margin="5"
                         Text="{Binding SelectedProduct.Price,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue=0}" />

                <TextBlock Text="Categoría ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox Width="50"
                         Margin="5"
                         Text="{Binding SelectedProduct.CategoryCode.CategoryCode, UpdateSourceTrigger=PropertyChanged, TargetNullValue=0}" />
            </StackPanel>

            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Insertar"
                 Width="100"
                 Margin="5"
                 Click="AbrirInsertarProducto_Click"/>

                <Button Content="Actualizar"
                        Command="{Binding UpdateCommand}"
                        Width="100"
                        Margin="5"/>
                <Button Content="Eliminar"
                        Command="{Binding DeleteCommand}"
                        Width="100"
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>



